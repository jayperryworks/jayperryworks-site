---
	// styles
	import '@styles/tokens/borders.css';
	import '@styles/tokens/spacing.css';
	import '@styles/tokens/type.css';
	import '@styles/tokens/color.css';

	// components
	import Heading from '@components/blocks/Heading.astro';
	import Passage from '@components/blocks/Passage.astro';

	// types
	import { KeyTextField } from '@prismicio/types';
	import type { FormattedText } from '@lib/types';

	export interface Props {
		text: FormattedText;
		class?: string;
		label?: KeyTextField;
	}

	const {
		text,
		class: className = '',
		label,
	} = Astro.props as Props;
---

<aside class={className}>
	{label && (
		<Heading
			class="label | type-role-accent type-scale-epsilon"
			level={2}
		>
			{label}
		</Heading>
	)}
	<Passage {text} />
</aside>

<style>
	.label {
		border-block-start: var(--border-default);
		padding-block: var(--space-narrow);
		font-style: normal;
	}

	aside {
		font-style: italic;
		color: var(--color-secondary);
	}
</style>
