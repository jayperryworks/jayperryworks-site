---
// assets
import '@styles/tokens/spacing.css';
import '@styles/tokens/color.css';

// components
import Passage from '@components/blocks/Passage.astro';

// types
import type { FormattedText } from '@lib/types';
import { KeyTextField } from '@prismicio/types';

export interface Props {
	text: FormattedText;
	attribution?: KeyTextField;
	class?: string;
}

const {
	text,
	attribution,
	class: className = '',
} = Astro.props as Props;
---

<blockquote class={className}>
	<Passage {text} />

	{attribution && (
		<cite class="type-role-accent type-scale-zeta">
			&mdash; {attribution}
		</cite>
	)}
</blockquote>

<style>
	blockquote {
		font-style: italic;
		padding-inline-start: var(--space-medium);
	}

	blockquote :global(p) {
		font-size: 0.89em;
		font-style: italic;
	}

	cite {
		display: block;
		padding-block-start: var(--space-medium);
		color: var(--color-secondary);
	}
</style>
