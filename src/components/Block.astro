---
import Passage from './blocks/Passage.astro';
import Figure from './blocks/Figure.astro';
import ContentWrapper from './ContentWrapper.astro';

const { block } = Astro.props;
---

<ContentWrapper width={block.prominence || 'default'}>
  {(block.type === 'passage') && <Passage {...block} />}
  {(block.type === 'figure') && <Figure {...block} />}
</ContentWrapper>