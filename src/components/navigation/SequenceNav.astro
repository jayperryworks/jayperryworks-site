---
import '@styles/tokens/borders.css';
import '@styles/tokens/color.css';
---
<ol>
	<slot></slot>
</ol>

<style>
	ol {
		align-items: center;
		display: flex;
		justify-content: space-between;
		list-style: none;
		margin-block: 0;
		margin-inline: 0;
		padding-block: 0;
		padding-inline: 0;
		position: relative;
	}

	ol::after {
		--height: 1px;

		content: '';
		display: block;
		left: 0;
		height: var(--height);
		margin-block-start: calc((var(--height) / 2) * -1);
		position: absolute;
		right: 0;
		top: 50%;
		z-index: -1;
		background-color: var(--color-secondary);
	}
</style>
