{
  "name": "jay-perry-works-site",
  "repository": "https://github.com/jayperryworks/jayperryworks-site/",
  "description": "The website for Jay Perry Works",
  "version": "3.2.1",
  "scripts": {
    "css:generate": "node ./scripts/css/index.js",
    "css:format": "prettier --write ./static/stylesheets/*",
    "css:optimize": "npx postcss ./static/stylesheets/* -r",
    "prep:sitemap": "node ./scripts/sitemap",
    "prep:redirects": "node ./scripts/redirects",
    "prep:images": "node ./scripts/optimizeImages.js",
    "prep:css": "run-s css:generate css:optimize",
    "prep:cms": "node ./scripts/cms/config.js",
    "prep": "run-s prep:*",
    "dev:css": "onchange './scripts/css/**/*.js' './content/design-tokens.js' -- run-s css:generate css:format",
    "dev:svelte": "sapper dev",
    "dev": "run-p dev:*",
    "build": "sapper build --legacy",
    "preexport": "npm run prep",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "compression": "^1.7.1",
    "date-fns": "^2.17.0",
    "fs": "0.0.1-security",
    "js-yaml": "^3.14.1",
    "markdown-it": "^10.0.0",
    "markdown-it-footnote": "^3.0.2",
    "minimist": ">=1.2.3",
    "path": "^0.12.7",
    "polka": "^1.0.0-next.11",
    "sharp": "^0.25.4",
    "sirv": "^0.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.13.7",
    "@babel/preset-env": "^7.13.5",
    "@babel/runtime": "^7.13.7",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-url": "^6.0.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^5.0.5",
    "modularscale-js": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-load-config": "^3.0.1",
    "prettier": "2.2.1",
    "prettify-xml": "^1.2.0",
    "rollup": "^2.42.0",
    "rollup-plugin-inline-svg": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.1",
    "serialize-javascript": ">=3.1.0",
    "svelte": "^3.32.3",
    "svelte-preprocess": "^3.9.12"
  }
}
