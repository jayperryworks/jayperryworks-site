{
	"name": "jay-perry-works-site",
	"repository": "https://github.com/jayperryworks/jayperryworks-site/",
	"description": "The website for Jay Perry Works",
	"version": "5.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"css:generate": "node ./lib/globalStyles/render.js",
		"css:format": "prettier --write ./src/styles/*",
		"css:optimize": "npx postcss ./src/styles/* -r",
		"css": "run-s css:generate css:format",
		"lint:node": "npx eslint 'lib/**/*.js' 'lib/**/*.ts' -c .eslintrc.node.cjs",
		"lint:svelte": "npx eslint 'src/**/*.svelte' -c .eslintrc.svelte.cjs",
		"lint": "run-s lint:*",
		"predev": "npm run css",
		"dev:astro": "astro dev",
		"dev:css": "onchange './src/lib/globalStyles/**/*.js' './src/lib/design-tokens.js' -- run-s css:generate css:format",
		"dev:lint": "onchange './src/**' './lib/globalStyles/**' -- npm run lint",
		"dev": "run-p dev:*",
		"start": "run-s dev",
		"prebuild": "run-s lint css",
		"build": "astro build",
		"preview": "astro preview"
	},
	"devDependencies": {
		"@astrojs/sitemap": "^0.1.0",
		"@astrojs/svelte": "^0.0.2",
		"@prismicio/client": "^6.4.1",
		"@prismicio/helpers": "^2.2.1",
		"@prismicio/types": "^0.1.27",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"astro": "^0.26.0",
		"autoprefixer": "^10.4.4",
		"change-case": "^4.1.2",
		"color-convert": "^2.0.1",
		"date-fns": "^2.28.0",
		"eslint": "^8.12.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-plugin-svelte3": "^3.4.1",
		"fs": "^0.0.1-security",
		"install": "^0.13.0",
		"markdown-it": "^12.3.2",
		"markdown-it-footnote": "^3.0.3",
		"modularscale-js": "^3.0.1",
		"npm": "^8.9.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"prettier": "^2.6.0",
		"svelte": "^3.46.4",
		"url": "^0.11.0",
		"vite-svg-loader": "^3.1.2"
	}
}
