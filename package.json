{
	"name": "jay-perry-works-site",
	"repository": "https://github.com/jayperryworks/jayperryworks-site/",
	"description": "The website for Jay Perry Works",
	"version": "5.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"css:generate": "node ./scripts/renderStyles.js",
		"css:format": "prettier --write ./src/styles/*",
		"css:optimize": "npx postcss ./src/styles/* -r",
		"prep:css": "run-s css:generate css:format",
		"dev:css": "onchange './src/lib/styleGenerators/**/*.js' './src/lib/design-tokens.js' -- run-s css:generate css:format",
		"predev": "run-p prep:*",
		"dev:astro": "astro dev",
		"dev": "run-p dev:*",
		"start": "run-s dev",
		"build": "astro build",
		"preview": "astro preview"
	},
	"devDependencies": {
		"@astrojs/svelte": "^0.0.2",
		"@prismicio/client": "^6.4.1",
		"@prismicio/helpers": "^2.2.1",
		"astro": "^0.25.0",
		"autoprefixer": "^10.4.4",
		"change-case": "^4.1.2",
		"color-convert": "^2.0.1",
		"fs": "^0.0.1-security",
		"markdown-it": "^12.3.2",
		"modularscale-js": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"prettier": "^2.6.0",
		"svelte": "^3.46.4",
		"url": "^0.11.0",
		"vite-svg-loader": "^3.1.2"
	}
}
