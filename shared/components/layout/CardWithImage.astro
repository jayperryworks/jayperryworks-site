---
// assets
import '@shared/styles/tokens/spacing.css';
import '@shared/styles/tokens/contentWidth.css';

// components
import Image from '@shared/components/elements/Image.astro';
import RevealOnScroll from '@shared/components/meta/RevealOnScroll.astro';

// types
import { ImageField } from '@prismicio/types';

export interface Props {
	image: ImageField;
	class?: string;
}

const { image, class: className = '' } = Astro.props as Props;
---

<figure class={['card-with-image', className].join(' ')}>
	<div class="wrapper">
		<RevealOnScroll>
			<Image
				class="image"
				source={image}
			/>
		</RevealOnScroll>
		<figcaption class="content">
			<slot />
		</figcaption>
	</div>
</figure>

<style>
	.card-with-image {
		--info-width: 18rem;
		--spacing: var(--space-medium);

		margin: 0;
		container-name: card;
		container-type: inline-size;
	}

	.wrapper {
		display: grid;
		grid-template-areas:
			'image'
			'info';
		gap: var(--spacing);
	}

	@container (min-width: 50em) {
		.wrapper {
			grid-template-columns: 1fr var(--info-width);
			grid-template-areas: 'image info';
		}
	}

	.image {
		display: block;
		grid-area: image;
		width: 100%;
	}

	.content {
		grid-area: info;
	}
</style>
